@model SSISAnalyticsDashboard.Models.ServerConfigViewModel
@{
    ViewData["Title"] = "Server Configuration";
    Layout = "_Layout";
}

<style>
    .config-container {
        min-height: calc(100vh - var(--navbar-height));
        display: flex;
        align-items: center;
        justify-content: center;
        padding: var(--retro-space-4);
    }
    
    .config-card {
        max-width: 700px;
        width: 100%;
        animation: slideUp 0.5s ease-out;
    }
    
    @@keyframes slideUp {
        from {
            opacity: 0;
            transform: translateY(30px);
        }
        to {
            opacity: 1;
            transform: translateY(0);
        }
    }
    
    .server-icon {
        font-size: 5rem;
        color: var(--neon-cyan);
        text-shadow: var(--glow-large);
        animation: server-pulse 2s ease-in-out infinite;
    }
    
    @@keyframes server-pulse {
        0%, 100% { 
            opacity: 1;
            text-shadow: var(--glow-large);
        }
        50% { 
            opacity: 0.7;
            text-shadow: var(--glow-medium);
        }
    }
    
    .info-box {
        background: linear-gradient(135deg, rgba(0, 245, 255, 0.05) 0%, rgba(157, 78, 221, 0.05) 100%);
        border: 1px solid rgba(0, 245, 255, 0.3);
        border-radius: 4px;
        padding: var(--retro-space-3);
        margin-top: var(--retro-space-3);
    }
    
    .info-box h6 {
        font-family: var(--font-retro-display);
        color: var(--neon-cyan);
        text-transform: uppercase;
        font-size: var(--retro-text-sm);
        letter-spacing: 1px;
        margin-bottom: var(--retro-space-2);
    }
    
    .info-box ul {
        margin: 0;
        padding-left: 20px;
    }
    
    .info-box li {
        color: rgba(0, 245, 255, 0.7);
        font-family: var(--font-retro-mono);
        font-size: var(--retro-text-sm);
        margin-bottom: 8px;
    }
</style>

<div class="config-container">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-10 col-lg-8">
                <div class="retro-card retro-card--cut config-card">
                    <div style="padding: var(--retro-space-5);">
                        <div class="text-center mb-4">
                            <i class="bi bi-server-fill server-icon"></i>
                            <h2 class="retro-neon-text" style="font-family: var(--font-retro-title); font-size: var(--retro-text-3xl); margin-top: var(--retro-space-3); margin-bottom: var(--retro-space-2);">
                                SQL SERVER CONFIGURATION
                            </h2>
                            <p style="color: rgba(0, 245, 255, 0.7); font-family: var(--font-retro-mono);">
                                Configure your SQL Server connection to get started
                            </p>
                        </div>

                        @if (!string.IsNullOrEmpty(Model.ErrorMessage))
                        {
                            <div class="retro-alert retro-alert--danger" role="alert">
                                <div class="retro-alert__content">
                                    <i class="bi bi-exclamation-triangle-fill"></i>
                                    <strong>Error!</strong> @Model.ErrorMessage
                                </div>
                            </div>
                        }

                        @if (Model.IsConfigured)
                        {
                            <div class="retro-alert retro-alert--success">
                                <div class="retro-alert__content">
                                    <i class="bi bi-check-circle-fill"></i>
                                    <strong>Connected!</strong> Currently configured with: <strong>@Model.ServerName</strong>
                                </div>
                            </div>
                        }

                        <form asp-action="Index" asp-controller="ServerConfig" method="post">
                            @Html.AntiForgeryToken()
                            
                            <input type="hidden" name="AuthenticationMode" value="Windows" />

                            <div style="margin-bottom: var(--retro-space-4);">
                                <label for="ServerName" style="font-family: var(--font-retro-display); color: var(--neon-cyan); font-size: var(--retro-text-base); text-transform: uppercase; margin-bottom: 12px; display: block; letter-spacing: 1px;">
                                    <i class="bi bi-hdd-network-fill"></i> SQL Server Instance Name
                                </label>
                                <input type="text"
                                       id="ServerName"
                                       name="ServerName" 
                                       class="retro-input" 
                                       style="font-size: var(--retro-text-lg); padding: var(--retro-space-2);"
                                       placeholder="e.g., localhost, .\SQLEXPRESS, SERVER\INSTANCE"
                                       value="@Model.ServerName"
                                       required />
                                <div style="margin-top: 8px; color: rgba(0, 245, 255, 0.6); font-size: var(--retro-text-sm); font-family: var(--font-retro-mono);">
                                    <i class="bi bi-info-circle-fill"></i> 
                                    Enter your SQL Server instance name (Windows Authentication)
                                </div>
                            </div>

                            <div class="d-grid gap-3">
                                <button type="submit" class="retro-btn retro-btn--lg retro-btn--cyan" id="submitBtn" style="width: 100%;">
                                    <i class="bi bi-check-circle-fill"></i> SAVE & GO TO DASHBOARD
                                </button>
                                
                                @if (Model.IsConfigured)
                                {
                                    <a href="/Dashboard/Index" class="retro-btn retro-btn--lg retro-btn--purple" style="width: 100%; text-align: center; text-decoration: none;">
                                        <i class="bi bi-speedometer2"></i> GO TO DASHBOARD
                                    </a>
                                }
                            </div>
                        </form>

                        <div class="info-box">
                            <h6><i class="bi bi-shield-lock-fill"></i> Connection Information</h6>
                            <ul>
                                <li><i class="bi bi-check2"></i> Using Windows Authentication (Integrated Security)</li>
                                <li><i class="bi bi-check2"></i> Connecting to SSISDB catalog database</li>
                                <li><i class="bi bi-check2"></i> Connection string will be saved to appsettings.json</li>
                            </ul>
                        </div>
                    </div>
                </div>

                <div class="text-center" style="margin-top: var(--retro-space-3);">
                    <small style="color: rgba(0, 245, 255, 0.6); font-family: var(--font-retro-mono);">
                        <i class="bi bi-info-circle-fill"></i> 
                        Make sure you have access to the SSISDB database on your SQL Server
                    </small>
                </div>
            </div>
        </div>
    </div>
</div>


@section Scripts {
}

